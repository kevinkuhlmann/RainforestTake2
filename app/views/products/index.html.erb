<h1>Products</h1>
<%= link_to "New Product", "/products/new" %>


<% @products.each do |product| %>
  <p>
    <%= link_to "#{product.name} ---- Price is $#{product.formatted_price}" , "products/#{product.id}" %>  |  <%= link_to "Edit", "products/#{product.id}/edit" %> | <%= link_to "Delete", "products/#{product.id}", method: :delete, data: {confirm: "Are you sure you want to delete this product?"}  %>
  </p>
<% end %>